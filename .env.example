# MCP Tool Evaluation System - Environment Configuration
# Copy this file to .env and fill in your API keys

# ===================
# LLM Provider Keys
# ===================

# OpenRouter API Key (Required for default configuration)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Optional: Direct provider keys (if not using OpenRouter)
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===================
# LLM Configuration
# ===================

# Default LLM provider to use
DEFAULT_LLM_PROVIDER=openrouter

# Default model identifier
DEFAULT_LLM_MODEL=anthropic/claude-3.5-sonnet

# Default timeout for LLM requests (seconds)
DEFAULT_TIMEOUT=30

# Default max retry attempts for failed requests
DEFAULT_MAX_RETRIES=3

# ===================
# Database Configuration
# ===================

# SQLite database path
DATABASE_URL=sqlite:///./mcp_eval.db

# ===================
# Server Configuration
# ===================

# Server host address
HOST=0.0.0.0

# Server port
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable colored console logs
COLORED_LOGS=true

# Enable rich tracebacks for errors
RICH_TRACEBACKS=false

# ===================
# Embedding Configuration
# ===================

# Embedding model type: 'fastembed', 'openai', or 'custom'
EMBEDDING_MODEL_TYPE=fastembed

# Embedding model identifier
# For fastembed: BAAI/bge-small-en-v1.5, sentence-transformers/all-MiniLM-L6-v2
# For OpenAI: text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL_NAME=BAAI/bge-small-en-v1.5

# Custom embedding API URL (only needed if EMBEDDING_MODEL_TYPE=custom)
# CUSTOM_EMBEDDING_API_URL=http://localhost:8001/embeddings

# Default similarity threshold for flagging similar tools (0.0-1.0)
SIMILARITY_THRESHOLD=0.85
